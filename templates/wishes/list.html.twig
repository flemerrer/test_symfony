{% extends 'base.html.twig' %}
{% block title %}Bucket List | {{ parent() }}{% endblock %}
{% block body %}
	<h1>My Bucket List</h1>
	<div class="bucket-list">
		{% for wish in wishes %}
			<div class="card">
				<div class="card-body">
					<h5 class="card-title"><a href={{ path('wish_details', {'id': wish.id}) }}>{{ wish.title }}</a></h5>
					<h6 class="card-subtitle mb-2 text-body-secondary">Created by {{ wish.author }}
						on {{ wish.dateCreated }}</h6>
					<a class="nav-link" href={{ path('wish_edit', { id: wish.id }) }}>Edit wish</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
