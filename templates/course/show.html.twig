{% extends 'base.html.twig' %}

{% block body %}
	<h1>{{ course.name() }}</h1>
	<dl>
		<dt>Duration</dt>
		<dd>{{ course.duration }}</dd>
		<dt>Published</dt>
		<dd>{{ course.published ? "yes" : "no" }}</dd>
		<dt>Content</dt>
		<dd>{{ course.content | nl2br }}</dd>
		<dt>Created</dt>
		<dd>{{ course.dateCreated }}</dd>
		{% if course.dateModified %}
			<dt>Modified</dt>
			<dd>{{ course.dateModified }}</dd>
		{% endif %}
	</dl>
{% endblock %}

{% block title %}

{% endblock %}

